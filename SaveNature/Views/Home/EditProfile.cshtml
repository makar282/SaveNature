@model SaveNature.Models.EditProfileViewModel
@{
   Layout = "_Layout";
   ViewData["Title"] = "Редактировать профиль";
}

<!DOCTYPE html>
<html lang="ru">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>СОХРАНИ ПРИРОДУ | Редактировать профиль</title>
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
   <link rel="stylesheet" href="/css/profile.css" />
</head>
<body>
   <div class="profile-container">
      <div class="profile-card">
         <h2>Редактировать профиль</h2>
         <form asp-action="EditProfile" method="post">
            <div class="mb-3">
               <label asp-for="UserName" class="form-label">Логин</label>
               <input asp-for="UserName" class="form-control" placeholder="Введите новый логин" />
               <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
               <label asp-for="Password" class="form-label">Новый пароль</label>
               <input asp-for="Password" type="password" class="form-control" placeholder="Введите новый пароль" />
               <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
               <label asp-for="AboutMe" class="form-label">О себе</label>
               <textarea asp-for="AboutMe" class="form-control" rows="5" placeholder="Расскажите о себе"></textarea>
               <span asp-validation-for="AboutMe" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
            <a asp-action="Index" asp-controller="Profile" class="btn btn-secondary">Отмена</a>
         </form>
      </div>
   </div>

   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
   <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
   <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>